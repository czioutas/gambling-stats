---
import MainNav from "../components/MainNav.astro";
import Footer from "../components/Footer.astro";
import "@/styles/globals.css";
import Disclaimer from "@/components/Disclaimer.astro";

interface Props {
  showSocial?: boolean;
}
---

<!doctype html>
<html lang="en">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:ital,wght@0,400;0,700;1,400;1,700&family=Lavishly+Yours&display=swap"
      rel="stylesheet"
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <meta name="description" content="Gambling Stats" />
    <meta name="keywords" content="" />
    <meta property="og:title" content="Gambling Stats" />
    <meta
      property="og:description"
      content="Electronic Music Artist from Berlin"
    />

    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Gambling Stats</title>
  </head>
  <body>
    <div class="min-h-screen flex flex-col">
      <div
        class="min-h-[40vh] flex flex-col items-center justify-center bg-gray-100"
      >
        <h1 class="text-5xl md:text-6xl font-bold mb-4 text-center">
          Gambling Stats
        </h1>
        <h2
          class="text-2xl md:text-3xl font-semibold text-gray-600 text-center"
        >
          The house always wins
        </h2>
        <MainNav />
      </div>
      <slot />
      <Footer />
    </div>
  </body>
</html>

<style is:global></style>
